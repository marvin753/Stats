{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸš€ Debug Backend (Node.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development"
      },
      "outputCapture": "console"
    },
    {
      "name": "ğŸ§ª Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "ğŸ Debug macOS App",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/cloned-stats/build/Debug/Stats.app/Contents/MacOS/Stats",
      "cwd": "${workspaceFolder}/cloned-stats"
    }
  ]
}
