# ========================================
# Environment Configuration Template
# Quiz Stats Animation System
# ========================================

# ----------------------------------------
# Application Settings
# ----------------------------------------
NODE_ENV=development
LOG_LEVEL=info

# ----------------------------------------
# Backend Configuration
# ----------------------------------------
BACKEND_PORT=3000
BACKEND_URL=http://localhost:3000

# ----------------------------------------
# OpenAI API Configuration
# ----------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
# Alternative models: gpt-4, gpt-4-turbo-preview

# OpenAI API Settings
OPENAI_TIMEOUT=30000
OPENAI_MAX_RETRIES=3

# ----------------------------------------
# Stats App Configuration
# ----------------------------------------
STATS_APP_URL=http://localhost:8080

# ----------------------------------------
# Redis Configuration
# ----------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme
REDIS_DB=0
REDIS_TTL=3600

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_ANALYZE_MAX=10

# ----------------------------------------
# CORS Configuration
# ----------------------------------------
CORS_ORIGIN=*
CORS_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ----------------------------------------
# Security
# ----------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-key-here
API_KEY=your-api-key-here
ENCRYPTION_KEY=your-encryption-key-here

# ----------------------------------------
# Monitoring & Logging
# ----------------------------------------
# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Prometheus
PROMETHEUS_PORT=9090

# Loki
LOKI_URL=http://loki:3100

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ----------------------------------------
# Database (if needed)
# ----------------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/quiz_stats
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# ----------------------------------------
# Email Notifications (if needed)
# ----------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@quiz-stats.example.com

# ----------------------------------------
# Deployment
# ----------------------------------------
# Production
PRODUCTION_HOST=quiz-stats.example.com
PRODUCTION_USER=deploy
# PRODUCTION_SSH_KEY is stored in GitHub Secrets

# Staging
STAGING_HOST=staging.quiz-stats.example.com
STAGING_USER=deploy
# STAGING_SSH_KEY is stored in GitHub Secrets

# ----------------------------------------
# Feature Flags
# ----------------------------------------
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_CACHING_ENABLED=true
FEATURE_ANALYTICS_ENABLED=false
FEATURE_RATE_LIMITING_ENABLED=true

# ----------------------------------------
# Third-party Integrations
# ----------------------------------------
# Slack notifications
SLACK_WEBHOOK=

# DataDog APM (if needed)
# DD_API_KEY=
# DD_APP_KEY=
# DD_SITE=datadoghq.com

# ----------------------------------------
# Development Settings
# ----------------------------------------
DEBUG=false
ENABLE_SWAGGER=true
MOCK_OPENAI=false
