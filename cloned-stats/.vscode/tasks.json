{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-swift",
      "type": "shell",
      "command": "./build-swift.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "owner": "swift",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "run-swift",
      "type": "shell",
      "command": "./run-swift.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["build-swift"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^ðŸš€ Starting Stats app",
          "endsPattern": "^ðŸ“Š HTTP Server will run on port 8080"
        }
      }
    },
    {
      "label": "start-backend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/../backend"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Backend server starting",
          "endsPattern": "Backend.*listening on port 3000"
        }
      }
    },
    {
      "label": "launch-system",
      "dependsOn": [
        "start-backend",
        "run-swift"
      ],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
